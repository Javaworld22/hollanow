    <style name="CustomDigitsTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="dgts__accentColor">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="dgts__logoDrawable">@drawable/bclogo</item>
    </style>

    <style name="tabLayoutStyle" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="digitsCustomizedButton">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tw__login_btn_text_size</item>
        <item name="android:textColor">@color/tw__solid_white</item>
        <item name="android:paddingLeft">@dimen/tw__login_btn_left_padding</item>
        <item name="android:paddingRight">@dimen/tw__login_btn_right_padding</item>
    </style>

    <style name="SearchViewStyle" parent="Base.Widget.AppCompat.SearchView.ActionBar">
        <item name="android:cursorVisible">true</item>
        <item name="android:colorActivatedHighlight">@color/secondary_text</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

