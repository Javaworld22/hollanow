<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_margin="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView4"
            android:layout_width="320dp"
            android:layout_height="50dp"
            ads:adUnitId="ca-app-pub-4959333807739009/8657377237"
            ads:adSize="BANNER"></com.google.android.gms.ads.AdView>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="20dp">

        <ImageView android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_small"
                   android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small"
                   android:id="@+id/notification_icon"
                   android:layout_alignParentStart="true"
                   android:src="@drawable/ic_notification_state"
                   android:tint="@android:color/darker_gray"/>


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/message_head"
                  android:paddingStart="20dp"
                  android:textStyle="bold"
                  tools:text="Message Head"
                  android:layout_alignParentTop="true"
                  android:layout_toEndOf="@+id/notification_icon"/>



        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/message_body"
                  android:layout_marginStart="8dp"
                  android:layout_toEndOf="@+id/notification_icon"
                  android:layout_below="@+id/message_head"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/notification_date"
                  android:layout_marginStart="8dp"
                  android:layout_below="@+id/message_body"
                  android:layout_alignParentEnd="true"/>




    </RelativeLayout>

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/notification_closebutton"
                   android:paddingLeft="40dp"
                   android:paddingBottom="20dp"
                   android:src="@drawable/ic_close_black_24dp"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentEnd="true"/>






    </RelativeLayout>

</android.support.v7.widget.CardView>