<RelativeLayout
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.doxa360.android.betacaller.HomeFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/contacts_recyclerview"/>

    <com.doxa360.android.betacaller.helpers.FastScroller
        android:id="@+id/fastscroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/contacts_recyclerview"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/contacts_recyclerview"
        />

    <ProgressBar android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/progress_bar"
                 android:layout_centerInParent="true"/>

</RelativeLayout>