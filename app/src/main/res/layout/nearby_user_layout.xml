<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_home"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:padding="10dp"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardMaxElevation="1dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/displayname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Yemi Gabriel"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_of_gallery"
            android:padding="10dp">



        <ImageView
            android:id="@+id/photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"

            android:src="@drawable/wil_profile"/>

            <TextView
                android:id="@+id/text_image_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empty text"
                style="?android:attr/textAppearanceSmall"
                android:textSize="12dp"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:lines="1"
                android:textColor="@color/hollabackground"
                android:rotation="-30"/>
        <!-- @dimen/com_facebook_profilepictureview_preset_size_small
         <com.doxa360.android.betacaller.helpers.MLRoundedImageView-->
        </FrameLayout>


        <TextView
            android:id="@+id/occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayname"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:textSize="12dp"
            tools:text="Tailor"
            />

        <!--TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/displayname"
            android:layout_below="@+id/occupation"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            tools:text="08037046543"
            /-->

        <!--TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/phone"
            android:layout_below="@+id/phone"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/secondary_text"
            tools:text="Lagos"
            /-->

        <TextView
            android:id="@+id/distance_away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:textColor="@color/secondary_text"
            tools:text="25km away"
            android:textSize="12sp"
            android:layout_below="@+id/occupation"/>

        <TextView
            android:id="@+id/no_of_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            tools:text="2 contents(s) on Gallery"
            android:textSize="12sp"
            android:layout_below="@+id/distance_away"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>