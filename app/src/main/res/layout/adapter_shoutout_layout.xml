<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_hollaShout"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="right"
        android:orientation="horizontal">

    <com.doxa360.android.betacaller.helpers.MLRoundedImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/shoutout_photo"
        android:background="@drawable/circle"
        android:src="@drawable/wil_profile"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginRight="16dp"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/sender_shoutout"
                  android:gravity="center"
                  android:textColor="@color/materialcolorpicker__grey"
                  android:padding="4dp"
                  android:paddingTop="6dp"
                  android:textSize="13dp"
                  android:text="Check me here"
                  />

    </LinearLayout>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/reciever_shoutout"
                  android:gravity="center"
                  android:textSize="13dp"
                  android:textColor="@color/text_green"
                  android:text="Check me here"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/shoutout_msg"
                  android:gravity="center_horizontal"
                  style="?android:attr/textAppearanceLarge"
                  android:maxLines="2"
                  android:text="Check me here jbcja iosinasi jnindinik jbujsdbj dbiwbndijnb usdbujb hbujuh uhihuihihi hihioihio CHIDI"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/time_sent"
                      android:textSize="10dp"
                      android:textColor="@color/text_green"
                      style="?android:attr/textAppearanceSmall"
                      android:paddingTop="12dp"
                      android:text="Check me here"/>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">



        <ImageView android:layout_width="21dp"
                   android:layout_height="21dp"
                   android:id="@+id/like_button"
                   android:src="@drawable/ic_action_like"
                   android:layout_gravity="right"
                   android:padding="1dp"
                   android:layout_marginEnd="1sp"

                android:tint="@color/outside_color_gray"/>


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/no_of_likes"
                      android:gravity="center_horizontal"
                      android:padding="5dp"
                      style="?android:attr/textAppearanceSmall"
                      android:text="5"/>

        </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>